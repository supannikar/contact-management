<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="cisgroup-1" author="ni">
        <createTable tableName="cisgroup">
            <column name="id" type="BIGINT" autoIncrement="true" startWith="1">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="modifiedtime" type="DECIMAL(15,0)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <!--<modifySql dbms="mysql">-->
            <!--<append value="ENGINE=INNODB  CHARSET=UTF8 COLLATE utf8_general_ci"/>-->
        <!--</modifySql>-->
        <!--<modifySql dbms="hsqldb">-->
            <!--<replace replace="GENERATED BY DEFAULT AS IDENTITY" with="GENERATED ALWAYS AS IDENTITY (START WITH 1)"/>-->
        <!--</modifySql>-->
    </changeSet>

    <changeSet id="cisdetail-1" author="ni">
        <createTable tableName="cisdetail">
            <column name="id" type="BIGINT" autoIncrement="true" startWith="1">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="group_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="modifiedtime" type="DECIMAL(15,0)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <!--<modifySql dbms="mysql">-->
            <!--<append value="ENGINE=INNODB  CHARSET=UTF8 COLLATE utf8_general_ci"/>-->
        <!--</modifySql>-->
        <!--<modifySql dbms="hsqldb">-->
            <!--<replace replace="GENERATED BY DEFAULT AS IDENTITY" with="GENERATED ALWAYS AS IDENTITY (START WITH 1)"/>-->
        <!--</modifySql>-->
    </changeSet>

    <!-- add foreign key -->
    <changeSet author="ni" id="addForeignKeyConstraint">
        <addForeignKeyConstraint baseColumnNames="group_id"
                                 baseTableName="cisdetail"
                                 constraintName="fk_contact_group"
                                 deferrable="false"
                                 initiallyDeferred="false"
                                 onDelete="NO ACTION"
                                 onUpdate="NO ACTION"
                                 referencedColumnNames="id"
                                 referencedTableName="cisgroup"
                                 referencesUniqueColumn="false"/>
    </changeSet>

</databaseChangeLog>